@model List<CategoryDto>
@{
    ViewData["Title"] = "Kategori Listesi";
}
<a class="btn btn-primary" asp-controller="Category" asp-action="Create">Save Category</a>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>IsActive</td>
            <td>IsDeleted</td>
            <td>İşlemler</td>          
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td>@item.IsDeleted</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>



</table>